<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/keyboard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center">

            <Button
                android:id="@+id/numlock_btn01"
                style="@style/NumLockButton"
                android:text="1" />

            <Button
                android:id="@+id/numlock_btn02"
                style="@style/NumLockButton"
                android:text="2" />

            <Button
                android:id="@+id/numlock_btn03"
                style="@style/NumLockButton"
                android:text="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center">

            <Button
                android:id="@+id/numlock_btn04"
                style="@style/NumLockButton"
                android:text="4" />

            <Button
                android:id="@+id/numlock_btn05"
                style="@style/NumLockButton"
                android:text="5" />

            <Button
                android:id="@+id/numlock_btn06"
                style="@style/NumLockButton"
                android:text="6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center">

            <Button
                android:id="@+id/numlock_btn07"
                style="@style/NumLockButton"
                android:text="7" />


            <Button
                android:id="@+id/numlock_btn08"
                style="@style/NumLockButton"
                android:text="8" />


            <Button
                android:id="@+id/numlock_btn09"
                style="@style/NumLockButton"
                android:text="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/numlock_btnback"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/numlock_btn00"
                style="@style/NumLockButton"
                android:text="0" />

            <ImageButton
                android:id="@+id/numlock_btnclear"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:enabled="false"
        android:id="@+id/et_numlock_password"
        android:inputType="numberPassword"
        android:gravity="center"
        android:textColor="#FFF"
        android:layout_above="@id/keyboard"
        android:lines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_numlock_tip"
        android:layout_above="@id/et_numlock_password"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textColor="#FFF"
        android:text="请输入密码"/>

</RelativeLayout>